<% provide(:title, 'Create New Whale') %>
<h1>Create New Whale Pod</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@whales, :url=>user_whales_path(@user)) do |f| %>
        <!== %= render 'shared/error_messages' %> ==>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>

        <%= f.file_field :photo %>

        <%= f.submit "Create this whale", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>

