<li id="pod-<%= pod.id %>">

  <%#=#link_to image_tag(whale.photo.url), user_pod_whale_path(whale.pod.id,whale.id)%>
  <%=image_tag(pod.photo.url)%>
  <span class="user"><%= link_to pod.name, pod.user %></span>
  <span class="description"><%= pod.description %></span>
  <% if logged_in? %>


      <div class="pods_form btn-group btn-group-justified">
        <%#=  link_to "Create A Whale", new_user_pod_path(@user.id), class: "btn btn-primary"%>
        <%=  link_to "Edit", edit_user_pod_path(pod.user.id,pod.id) ,class: "btn btn-primary"%>
      </div>

  <% else %>

  <% end %>
  <span class="timestamp">
      Posted <%= time_ago_in_words(pod.created_at) %> ago.
    </span>
</li>
