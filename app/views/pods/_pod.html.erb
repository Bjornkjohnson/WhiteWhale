<li id="pod-<%= pod.id %>">
  <= link_to gravatar_for(pod.user), pod.user >
    <%=link_to image_tag pod.photo.url%> 
    <span class="user"><%= link_to pod.user.name, pod.user %></span>
    <span class="description"><%= pod.description %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(pod.created_at) %> ago.
    </span>
</li>
